{
  "name": "mezmo-cloudwatch",
  "version": "1.0.0",
  "description": "Lambda Functions to Stream Logs from AWS CloudWatch to Mezmo Pipeline",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./",
    "test": "tap",
    "release": "semantic-release",
    "release:dry": "semantic-release --no-ci --dry-run --branches=${GIT_BRANCH:-main}",
    "prerelease-tool:build": "npm run release-tool:install",
    "prerelease-tool:clean": "npm run release-tool:install",
    "prerelease-tool:lint": "npm run release-tool:install",
    "prerelease-tool:publish": "npm run release-tool:install",
    "prerelease-tool:render": "npm run release-tool:install",
    "prerelease-tool:render-local": "npm run release-tool:install",
    "prerelease-tool:test": "npm run release-tool:install",
    "prerelease-tool:test-render": "npm run release-tool:install",
    "release-tool:build": "./release-tool build",
    "release-tool:clean": "./release-tool clean",
    "release-tool:install": "test -x release-tool || npx --yes @answerbook/release-tool@latest install",
    "release-tool:lint": "./release-tool lint",
    "release-tool:publish": "./release-tool publish",
    "release-tool:render": "./release-tool render",
    "release-tool:render-local": "./release-tool render-local",
    "release-tool:test": "./release-tool test",
    "release-tool:test-render": "./release-tool test-render"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "coverage/",
      "deployment/"
    ],
    "extends": "logdna",
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "env": {
      "es2022": true
    },
    "rules": {
      "max-len": [
        2,
        90,
        {
          "ignoreComments": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "space-unary-ops": [
        2,
        {
          "words": false,
          "nonwords": false,
          "overrides": {
            "yield": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "eslint-config-logdna": "^7.0.2",
    "tap": "^18.8.0",
    "semantic-release": "^17.4.2",
    "semantic-release-config-logdna": "^1.1.1",
    "@semantic-release/github": "^7.2.1"
  },
  "keywords": [
    "lambda",
    "mezmo",
    "aws",
    "cloudwatch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mezmo/mezmo-cloudwatch.git"
  },
  "author": "LogDNA",
  "license": "MIT",
  "homepage": "https://github.com/mezmo/mezmo-cloudwatch",
  "dependencies": {
    "async": "^3.2.5",
    "got": "^11.8.3"
  }
}
